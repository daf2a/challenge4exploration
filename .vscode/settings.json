{
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.formatOnSave": false,
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".*\\.swift$",
                "cmd": "swift-format format --in-place ${file}"
            },
            {
                "match": ".*\\.swift$",
                "cmd": "swiftlint autocorrect --path ${file}"
            }
        ]
    }
}